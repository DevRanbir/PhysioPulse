# PhysioPulse Environment Configuration
# Copy this file to .env and update the values

# API Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# File Storage
UPLOAD_DIR=input_videos
OUTPUT_DIR=output_data
TEMP_DIR=temp

# Video Processing
MAX_VIDEO_SIZE_MB=100
FRAME_SKIP=5

# Supported Video Formats (comma-separated)
SUPPORTED_VIDEO_FORMATS=.mp4,.avi,.mov,.wmv,.flv,.webm,.mkv

# Pose Detection
POSE_CONFIDENCE_THRESHOLD=0.5
POSE_TRACKING_CONFIDENCE=0.5

# Scoring Configuration
PERFECT_ANGLE_RANGE=150,180
GOOD_ANGLE_RANGE=120,149
PERFECT_SCORE=100
GOOD_SCORE=75
NEEDS_IMPROVEMENT_SCORE=50

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=physiopulse.log

# Performance
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT_SECONDS=300

# Firebase Configuration (for future integration)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id

# Database Configuration (for future integration)
DATABASE_URL=postgresql://user:password@localhost/physiopulse

# Redis Configuration (for future integration)
REDIS_URL=redis://localhost:6379
